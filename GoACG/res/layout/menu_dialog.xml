<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ListView android:id="@+id/list_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:drawable/dialog_holo_light_frame" />
    
    <RelativeLayout android:id="@+id/layout_staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_menu"
        android:layout_alignRight="@+id/list_menu"
        android:padding="20dp"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="@android:drawable/dialog_holo_light_frame">
        
        <ImageView android:id="@+id/img_goacg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/background_fore_half" />
        <!-- 
        <TextView android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:text="追新番" />
         -->
        <RelativeLayout android:id="@+id/layout_hubtech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_goacg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" >
	            
	        <TextView android:id="@+id/txt_hubtech"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="32sp"
	            android:text="聚合科技" />
	        
	        <TextView android:id="@+id/txt_make"
	            android:layout_width="14sp"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/txt_hubtech"
                android:layout_alignBottom="@+id/txt_hubtech"
	            android:textSize="14sp"
	            android:text="制作" />
	        
        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/layout_hexieshe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_hubtech"
            android:layout_centerHorizontal="true" >
	            
	        <TextView android:id="@+id/txt_hexieshe"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="30sp"
	            android:text="和邪社" />
	       
	        <TextView android:id="@+id/txt_make"
	            android:layout_width="28sp"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/txt_hexieshe"
	            android:layout_alignBottom="@+id/txt_hexieshe"
	            android:lineSpacingExtra="0dp"
	            android:textSize="14sp"
	            android:text="深度运营" />
	        
        </RelativeLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout_hexieshe"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="出品人：傅博\n总技术：蔡镜明\n客户端：梁硕\n    Web：廖正东" />
        
    </RelativeLayout>
    
</RelativeLayout>
